<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LuxeCart - Premium Shopping Experience</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .admin-icon-section {
            position: fixed;
            top: 45px;
            right: 40px;
            z-index: 1000;
            text-align: center;
        }

            .admin-icon-section a {
                background-color: #007bff;
                color: white;
                padding: 10px;
                border-radius: 50%;
                display: inline-block;
                text-align: center;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                transition: background-color 0.3s ease;
                position: relative;
            }

                .admin-icon-section a:hover {
                    background-color: #0056b3;
                    text-decoration: none;
                }

        /* Hidden dropdown */
        .admin-dropdown {
            display: none;
            position: absolute;
            top: 50px;
            right: 0;
            background: #343a40;
            color: white;
            padding: 10px;
            border-radius: 8px;
            width: 180px;
            text-align: left;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
        }

        /* Show dropdown on hover */
        .admin-icon-section:hover .admin-dropdown {
            display: block;
        }

    </style>
</head>
<body>
    <header>
        <div class="top-bar bg-dark text-white py-2">
            <div class="container d-flex justify-content-between">
                <span><i class="bi bi-telephone"></i> +1 (555) 123-4567</span>
                <span><i class="bi bi-envelope"></i> support@luxecart.com</span>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
            <div class="container">
                <a class="navbar-brand fs-3 fw-bold text-primary" href="#">
                    <i class="bi bi-bag-heart-fill"></i> LuxeCart
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item me-4">
                            @Html.ActionLink("Admin Dashboard", "Index", "AdminPanel", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item me-4">
                            @Html.ActionLink("All Product List", "AllProducts", "AdminPanel", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item me-4">
                            @Html.ActionLink("Add New Product", "AddProduct", "AdminPanel", null, new { @class = "nav-link" })
                        </li>

                    </ul>
                    <div class="admin-icon-section">
                        <a href="@Url.Action("Index", "AdminPanel")" title="Admin Dashboard" id="admin-icon">
                            <i class="fas fa-user-cog fa-2x"></i> <!-- Font Awesome admin icon -->
                        </a>
                        <div class="admin-dropdown text-center p-2">
                            <p class="mb-1 text-white">
                                <i class="fas fa-envelope me-1"></i> @User.Identity.Name
                            </p>
                            <form action="@Url.Action("Logout", "Credentials")" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm w-100 mt-1">
                                    <i class="fas fa-sign-out-alt me-1"></i> Logout
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main class="container py-5">
        @RenderBody()
    </main>
    <footer class="bg-dark text-white pt-5 pb-3">
        <div class="container text-center">
            <p>&copy; 2024 LuxeCart. All rights reserved.</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
