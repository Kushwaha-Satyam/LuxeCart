                            <i class="bi bi-house" aria-hidden="true"></i>
                            <span class="ms-1">Home</span>
                        </a>
                           }
                            
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-grid" aria-hidden="true"></i>
                                <span class="ms-1">Categories</span>
                            </a>
                            <ul class="dropdown-menu animate-fadeInUp">
                                <li>
                                    <a class="dropdown-item" href="@(User.Identity.IsAuthenticated ? Url.Action("ProductByCategory", "Product", new {category = "Electronics"}) : "javascript:void(0);")"
                                       onclick="@(User.Identity.IsAuthenticated ? "" : "alert('Please login to access Electronics.');")">
                                        Electronics
                                    </a>
                                </li>
                               <li>
                                   <a class="dropdown-item" href="@(User.Identity.IsAuthenticated ? Url.Action("ProductByCategory", "Product", new {category = "Clothing"}) : "javascript:void(0);")"
                                      onclick="@(User.Identity.IsAuthenticated ? "" : "alert('Please login to access Clothing.');")">
                                       Clothing
                                   </a>
                               </li>
                               <li>
                                   <a class="dropdown-item" href="@(User.Identity.IsAuthenticated ? Url.Action("ProductByCategory", "Product", new {category = "HomeAndLiving"}) : "javascript:void(0);")"
                                      onclick="@(User.Identity.IsAuthenticated ? "" : "alert('Please login to access Home and Living.');")">
                                      Home and Living
                                   </a>
                               </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ViewCart", "Product", new {userId = Session["userID"]})" aria-label="Cart with 3 items">
                                <i class="bi bi-cart3" aria-hidden="true"></i>
                                <span class="ms-1">Cart</span>
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle" aria-hidden="true"></i>
                                    <span class="ms-1">Account</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end animate-fadeInUp">
                                    <!-- Display User Email -->
                                    <li>
                                        <div class="dropdown-item">
                                            <strong>Email:</strong> @User.Identity.Name
