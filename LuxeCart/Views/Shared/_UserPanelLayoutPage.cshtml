                                        </div>
                                    </li>
                                </ul>

                                <script>
                                    function confirmLogout() {
                                        return confirm("Are you sure you want to log out?");
                                    }
                                </script>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Credentials")">
