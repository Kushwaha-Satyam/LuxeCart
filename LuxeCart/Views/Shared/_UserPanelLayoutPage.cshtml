                {
                    <a class="navbar-brand" href="@Url.Action("Index","UserPanel")">
                        <i class="bi bi-bag-heart-fill" aria-hidden="true"></i>
                        <span class="ms-2">LuxeCart</span>
                    </a>
                }
                else
                {
                    <a class="navbar-brand" href="@Url.Action("Index","Home")">
                        <i class="bi bi-bag-heart-fill" aria-hidden="true"></i>
                        <span class="ms-2">LuxeCart</span>
                    </a>

