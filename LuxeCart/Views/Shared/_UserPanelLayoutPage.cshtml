                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Register", "Credentials")">
                                    <i class="bi bi-person-plus"></i>
                                    <span class="ms-1">Sign Up</span>
                                </a>
                            </li>
                        }
