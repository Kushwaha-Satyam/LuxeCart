                        <div class="input-group">
                            <input class="form-control" type="search" name="searchTerm" placeholder="Search products..." aria-label="Search products">
                            <button class="btn btn-primary" type="submit" aria-label="Submit search">
                                <i class="bi bi-search" aria-hidden="true"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Navigation Links -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                             {
                            <a class="nav-link active" href="@Url.Action("Index","UserPanel")" aria-current="page">
                                <i class="bi bi-house" aria-hidden="true"></i>
